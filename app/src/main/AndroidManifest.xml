<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.rkrjstdio.inventoryapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_store"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".WhatTheInventory"
            android:theme="@style/AppTheme.NoActionBar"
            tools:targetApi="jelly_bean">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StockTrackerActivity"
            android:parentActivityName=".StocksActivity"
            android:theme="@style/AddTaskTheme"
            tools:targetApi="jelly_bean"
            tools:ignore="UnusedAttribute">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StocksActivity"/>
        </activity>
        <activity
            android:name=".StocksActivity"
            android:theme="@style/AppTheme"
            tools:targetApi="jelly_bean">
        </activity>

        <provider
            android:name=".data.StockProvider"
            android:authorities="com.example.rkrjstdio.inventoryapp"
            android:exported="false"/>
    </application>

</manifest>